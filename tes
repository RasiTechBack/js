/*
 * exampleScript.js
 * Demonstrasi penggunaan setColor, setFont, setFontSize (dengan textFilter).
 */

// 1) Tampilkan beberapa teks di halaman (untuk diubah style-nya)
document.body.innerHTML += `
  <div class="demo-container">
    <p>Ini paragraf pertama. Terdapat kata "merah" di sini: merah</p>
    <p class="special">Ini paragraf kedua. Kata "besar" di sini: besar</p>
    <p>Kalimat ini mengandung kata "filter" yang akan kita ubah.</p>
  </div>
`;

// 2) Logging awal
console.log("Memulai demo setColor, setFont, setFontSize...");

// 3) Mewarnai kata "merah" dengan merah di seluruh paragraf
console.log("Mewarnai kata 'merah' di semua paragraf menjadi merah:");
setColor("p", "red", "merah");

// 4) Mengubah font kata "besar" di paragraf .special menjadi "Arial"
console.log("Mengganti font 'besar' di .special menjadi Arial:");
setFont(".special", "Arial", "besar");

// 5) Mengubah ukuran font kata "filter" di semua paragraf menjadi 24px
console.log("Mengubah ukuran font kata 'filter' di <p> menjadi 24px:");
setFontSize("p", 24, "filter");

// 6) Tanpa textFilter: Ubah warna body menjadi hijau
console.log("Mengubah seluruh teks <body> menjadi hijau (tanpa filter):");
setColor("body", "green");

// 7) Tanyakan kabar user (menggunakan prompt bawaan browser)
console.log("Menanyakan kabar user...");
const jawaban = prompt("Bagaimana kabar Anda hari ini?");
console.log("User menjawab: " + jawaban);

// 8) Selesai
console.log("Selesai demonstrasi script eksternal.");
