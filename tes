/*
 * customScript.js
 * Contoh script eksternal yang mendefinisikan fungsi:
 *   setColor, setFont, setFontSize, askQuestion
 * dan memanggil console.log untuk menampilkan output di emulator CMD.
 */

// Definisikan fungsi global
window.setColor = function(selector, color) {
  // Mengubah CSS color pada elemen
  document.querySelectorAll(selector).forEach(el => {
    el.style.color = color;
  });
};

window.setFont = function(selector, fontName) {
  // Mengubah font-family
  document.querySelectorAll(selector).forEach(el => {
    el.style.fontFamily = fontName;
  });
};

window.setFontSize = function(selector, size) {
  // Mengubah font-size (dalam pixel)
  document.querySelectorAll(selector).forEach(el => {
    el.style.fontSize = size + "px";
  });
};

window.askQuestion = function(question) {
  // Menggunakan prompt bawaan browser (blocking)
  // Return jawaban user
  return prompt(question);
};

// ---------------------------------------
// Demonstrasi pemanggilan
// ---------------------------------------

console.log("Memulai script custom...");

// Ubah warna teks body jadi kuning
setColor("body", "yellow");
// Ubah font body jadi "Arial"
setFont("body", "Arial");
// Ubah ukuran font body jadi 20px
setFontSize("body", 20);

// Tanyakan ke user
const jawaban = askQuestion("Apa kabar hari ini?");
console.log("User menjawab: " + jawaban);

// Selesai
console.log("Script custom selesai dijalankan.");
